{
  "environment": "production",
  "debug": false,
  "log_level": "INFO",
  
  "exchange": {
    "testnet": false,
    "request_timeout": 10,
    "recv_window": 5000,
    "max_requests_per_minute": 1200
  },
  
  "trading": {
    "symbols": ["btcusdt", "ethusdt", "solusdt"],
    "initial_capital": 10000.0,
    "max_position_usd": 5000.0,
    "max_total_exposure_usd": 8000.0,
    "max_leverage": 1,
    "position_pnl_warning_pct": -0.03,
    "position_pnl_critical_pct": -0.05,
    "daily_loss_limit_pct": -0.10,
    "enable_auto_hedge": true,
    "hedge_threshold_pct": 0.8
  },
  
  "strategy": {
    "gamma": 0.1,
    "kappa": 0.5,
    "use_glt": true,
    "glt_use_iterative_theta": true,
    "glt_a": 10.0,
    "glt_k": 0.5,
    "glt_gamma": 0.1,
    "inventory_skew_lambda": 1.0,
    "enable_hmm_regime": true,
    "hmm_update_interval": 10,
    "enable_vpin": true
  },
  
  "monitoring": {
    "enable_health_monitor": true,
    "health_check_interval": 30,
    "enable_alerts": true,
    "telegram_enabled": true,
    "discord_enabled": true
  },
  
  "database": {
    "db_path": "data/production_trading.db",
    "connection_pool_size": 5,
    "enable_wal": true,
    "keep_trades_days": 90,
    "keep_events_days": 30
  }
}
