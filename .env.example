# ==========================================
# Trading Bot Configuration
# ==========================================

# Environment (development, staging, production, backtest)
BOT_ENV=development

# Debug Mode
DEBUG=true

# ==========================================
# Exchange Configuration
# ==========================================

# Binance API Credentials
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Testnet (true for testing, false for real trading)
BINANCE_TESTNET=true

# ==========================================
# Trading Parameters
# ==========================================

# Symbols (comma-separated)
TRADING_SYMBOLS=btcusdt,ethusdt

# Position Limits
MAX_POSITION_USD=5000
INITIAL_CAPITAL=10000

# ==========================================
# Monitoring & Alerts
# ==========================================

# Telegram Bot
TELEGRAM_TOKEN=
TELEGRAM_CHAT_ID=

# Discord Webhook
DISCORD_WEBHOOK=

# Email Alerts (optional)
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_TO=

# ==========================================
# Advanced Settings
# ==========================================

# Logging
LOG_LEVEL=INFO

# Database
DATABASE_PATH=data/trading_data.db

# Performance
CONNECTION_POOL_SIZE=5
